{
    "name": "ulrack/database-extension",
    "description": "The database manager extension for Ulrack.",
    "keywords": [
        "services",
        "dbm",
        "database"
    ],
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require": {
        "php": "^7.3",
        "grizz-it/configuration": "^1.1",
        "ulrack/command": "^2.0",
        "ulrack/dbal": "^1.1",
        "ulrack/dbal-pdo": "^2.1",
        "ulrack/services": "^3.0"
    },
    "authors": [
        {
            "name": "Ulrack",
            "homepage": "https://www.ulrack.com/",
            "role": "Developer"
        }
    ],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Ulrack\\DatabaseExtension\\": "src/"
        },
        "files": [
            "locator.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ulrack\\DatabaseExtension\\Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
